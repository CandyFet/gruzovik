= form_for @sto, url: forms_sto_path, remote: true, html: {autocomplete: 'off'} do |f|
  .input
    = f.text_field :name, placeholder: 'ВАШЕ ИМЯ'
  .input
    = f.phone_field :phone, placeholder: 'ТЕЛЕФОН'
  .input
    = f.text_field :type_of_work, placeholder: 'ТИП РАБОТ'
  .input
    = f.text_field :convenient_date, placeholder: 'УДОБНЫЕ ДАТА И ВРЕМЯ'
  .action
    = submit_tag 'Отправить', name: nil
