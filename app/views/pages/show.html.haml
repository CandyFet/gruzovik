= render 'shared/catalog_form'

.simple-page
  %h1= @page.name

  - if @page.image?
    .image= link_to image_tag(@page.image.big), @page.image.url, data: {lightbox: 'main-image'}

  .editor-text= raw @page.content

- if @page.slug == 'contacts'
  - content_for :under_wrapper do
    = render 'map', all_shops: true
